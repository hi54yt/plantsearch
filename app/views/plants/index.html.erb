<div id="wrapper">
<div class="container">
  <%- model_class = Plant -%>
  <!-- <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
  </div> -->
  
  <h3 class="title-divider">
    <span>植物查询系统</span>
  </h3>

  
  <%= simple_form_for @search, :url => search_url, :method => 'post' do |f| %>
  <div class="row-fluid">
    <div class="span4">
    <%= f.input :zw_contains %>
    </div>
    <div class="span4">
    <%= f.input :ldm_contains %>
    </div>
  </div>
  
  <legend>常用选种指标</legend>
  <div class="row-fluid">
    <div class="span4">
    <%= f.input :cdxzzb_equals, :collection => Plant.select(:cdxzzb).where("cdxzzb != ''").uniq, :value_method => :cdxzzb, :label_method => :cdxzzb, :include_blank => '全部' %>
    </div>
    <div class="span4">
    <%= f.input :cl_equals, :collection => Plant.select(:cl).where("cl != ''").uniq, :value_method => :cl, :label_method => :cl, :include_blank => '全部' %>
    </div>
    <div class="span4">
    <%= f.input :sd_equals, :collection => Plant.select(:sd).where("sd != ''").uniq, :value_method => :sd, :label_method => :sd, :include_blank => '全部' %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span4">
    <%= f.input :xzd_equals, :collection => Plant.select(:xzd).where("xzd != ''").uniq, :value_method => :xzd, :label_method => :xzd, :include_blank => '全部' %>
    </div>
    <div class="span4">
    <%= f.input :kdzg_equals, :collection => Plant.select(:kdzg).where("kdzg != ''").uniq, :value_method => :kdzg, :label_method => :kdzg, :include_blank => '全部' %>
    </div>
    <div class="span4">
    <%= f.input :flsgsqs_month_equals, :collection => Plant.flsgsq_lists, :include_blank => '全部' %>
    </div>
  </div>
  
  <legend>服务性指标</legend>
  <div class="row-fluid">
    <div class="span4">
    <%= f.input :zhstfwqlpx_range, :collection => Plant.zhstfwqlpx_lists, :include_blank => '全部' %>
    </div>
    <div class="span4">
    <%= f.input :jwzs_equals, :collection => Plant.select(:jwzs).where("jwzs != ''").uniq, :value_method => :jwzs, :label_method => :jwzs, :include_blank => '全部' %>
    </div>
    <div class="span4">
    <%= f.input :gtsy_equals, :collection => Plant.select(:gtsy).where("gtsy != ''").uniq, :value_method => :gtsy, :label_method => :gtsy, :include_blank => '全部' %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span4">
    <%= f.input :zc_range, :collection => Plant.zc_lists, :include_blank => '全部' %>
    </div>
    <div class="span4">
    <%= f.input :hjwr_equals, :collection => Plant.select(:hjwr).where("hjwr != ''").uniq, :value_method => :hjwr, :label_method => :hjwr, :include_blank => '全部' %>
    </div>
    <div class="span4">
    <%= f.input :bctr_equals, :collection => Plant.select(:bctr).where("bctr != ''").uniq, :value_method => :bctr, :label_method => :bctr, :include_blank => '全部' %>
    </div>
  </div>
  
  <legend>适应性指标</legend>
  <div class="row-fluid">
    <div class="span4">
    <%= f.input :yzxx_equals, :collection => Plant.select(:yzxx).where("yzxx != ''").uniq, :value_method => :yzxx, :label_method => :yzxx, :include_blank => '全部' %>
    </div>
    <div class="span4">
    <%= f.input :gsydjs_level_equals, :collection => Plant.gsydj_lists, :include_blank => '全部' %>
    </div>
    <div class="span4">
    <%= f.input :trsfsyxdjs_level_equals, :collection => Plant.trsfsyxdj_lists, :include_blank => '全部' %>
    </div>
  </div>
  
  <div class="row-fluid">
    <div class="span4">
    <%= f.input :ak_between %>
    </div>
    <div class="span4">
    <%= f.input :ap_between %>
    </div>
    <div class="span4">
    <%= f.input :soc_between %>
    </div>
  </div>
  
  <div class="row-fluid">
    <div class="span4">
    <%= f.input :tn_between %>
    </div>
    <div class="span4">
    <%= f.input :ph_between %>
    </div>
    <div class="span4">
    <%= f.input :sbd_between %>
    </div>
  </div>
  
  <legend>是否需排除</legend>
  <div class="row-fluid">
    <div class="span4">
    <%= f.input :sfjdx_equals, :collection=>[['是','有毒'],['否','']], :as=>"radio_buttons", :item_wrapper_class => 'inline', :checked => '有毒' %>
    </div>
    <div class="span4">
    <%= f.input :sfjhfzmx_equals, :collection=>[['是',1],['否','']], :as=>"radio_buttons", :item_wrapper_class => 'inline' %>
    </div>
    <div class="span4">
    <%= f.input :sfjc_equals, :collection=>[['是',1],['否','']], :as=>"radio_buttons", :item_wrapper_class => 'inline' %>
    </div>
  </div>
  
    <!-- <div class="row-fluid">
    <%= f.input :ke_equals, :collection => Plant.select(:ke).where("ke != ''").uniq, :value_method => :ke, :include_blank => '全部' %>
    </div> -->
    <div id="search">
      <%= submit_tag "查询", :name => nil, :class => 'btn btn-success' %>
      <%= link_to "重置", reset_search_condition_path, :class => 'btn', :remote => true %>
    </div>
  <% end %>
  
  <% if @plants.present? %>
  <div class="tabbable">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#cyxzzb" data-toggle="tab">常用选种指标</a></li>
      <li><a href="#zxfwql" data-toggle="tab">正向服务潜力排序</a></li>
      <li><a href="#syxzb" data-toggle="tab">适应性指标</a></li>
      <li><a href="#ffw" data-toggle="tab">负服务</a></li>
      <li><a href="#fzzb" data-toggle="tab">辅助指标</a></li>
    </ul>
      
    <div class="tab-content">
      <div class="tab-pane active" id="cyxzzb">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th><%= model_class.human_attribute_name(:zw) %></th>
              <th><%= model_class.human_attribute_name(:ldm) %></th>
              <th><%= model_class.human_attribute_name(:cdxzzb) %></th>
              <th><%= model_class.human_attribute_name(:cl) %></th>
              <th><%= model_class.human_attribute_name(:xzd) %></th>
              <th><%= model_class.human_attribute_name(:zygsbw) %></th>
              <th><%= model_class.human_attribute_name(:sd) %></th>
              <th><%= model_class.human_attribute_name(:flsgsq) %></th>
              <!-- <th><%=t '.actions', :default => t("helpers.actions") %></th> -->
            </tr>
          </thead>
          <tbody>
            <% @plants.each do |plant| %>
            <tr>
              <td><%= plant.zw %></td>
              <td><%= plant.ldm %></td>
              <td><%= plant.cdxzzb %></td>
              <td><%= plant.cl %></td>
              <td><%= plant.xzd %></td>
              <td><%= plant.zygsbw %></td>
              <td><%= plant.sd %></td>
              <td><%= plant.flsgsq %></td>
              <!-- <td>
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_plant_path(plant), :class => 'btn btn-mini' %>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                plant_path(plant),
                :method => :delete,
                :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                :class => 'btn btn-mini btn-danger' %>
              </td> -->
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="tab-pane" id="zxfwql">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th><%= model_class.human_attribute_name(:zw) %></th>
              <th><%= sort_link @search, :zhstfwqlpx %></th>
              <th><%= sort_link @search, :jwzs %></th>
              <th><%= sort_link @search, :gtsy %></th>
              <th><%= sort_link @search, :zc %></th>
              <th><%= model_class.human_attribute_name(:hjwr) %></th>
              <th><%= sort_link @search, :bctr %></th>
            </tr>
          </thead>
          <tbody>
            <% @plants.each do |plant| %>
            <tr>
              <td><%= plant.zw %></td>
              <td><%= plant.zhstfwqlpx %></td>
              <td><%= plant.jwzs %></td>
              <td><%= plant.gtsy %></td>
              <td><%= plant.zc %></td>
              <td><%= plant.hjwr %></td>
              <td><%= plant.bctr %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="tab-pane" id="syxzb">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th><%= model_class.human_attribute_name(:zw) %></th>
              <th><%= model_class.human_attribute_name(:yzxx) %></th>
              <th><%= model_class.human_attribute_name(:gsydj) %></th>
              <th><%= model_class.human_attribute_name(:trsfsyxdj) %></th>
              <th><%= model_class.human_attribute_name(:phmin) %></th>
              <th><%= model_class.human_attribute_name(:phmax) %></th>
              <th><%= model_class.human_attribute_name(:apmin) %></th>
              <th><%= model_class.human_attribute_name(:apmax) %></th>
              <th><%= model_class.human_attribute_name(:akmin) %></th>
              <th><%= model_class.human_attribute_name(:akmax) %></th>
              <th><%= model_class.human_attribute_name(:tnmin) %></th>
              <th><%= model_class.human_attribute_name(:tnmax) %></th>
              <th><%= model_class.human_attribute_name(:socmin) %></th>
              <th><%= model_class.human_attribute_name(:socmax) %></th>
              <th><%= model_class.human_attribute_name(:sbdmin) %></th>
              <th><%= model_class.human_attribute_name(:sbdmax) %></th>
            </tr>
          </thead>
          <tbody>
            <% @plants.each do |plant| %>
            <tr>
              <td><%= plant.zw %></td>
              <td><%= plant.yzxx %></td>
              <td><%= plant.gsydj %></td>
              <td><%= plant.trsfsyxdj %></td>
              <td><%= plant.phmin %></td>
              <td><%= plant.phmax %></td>
              <td><%= plant.apmin %></td>
              <td><%= plant.apmax %></td>
              <td><%= plant.akmin %></td>
              <td><%= plant.akmax %></td>
              <td><%= plant.tnmin %></td>
              <td><%= plant.tnmax %></td>
              <td><%= plant.socmin %></td>
              <td><%= plant.socmax %></td>
              <td><%= plant.sbdmin %></td>
              <td><%= plant.sbdmax %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="tab-pane" id="ffw">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th><%= model_class.human_attribute_name(:zw) %></th>
              <th><%= model_class.human_attribute_name(:sfjdx) %></th>
              <th><%= model_class.human_attribute_name(:sfjhfzmx) %></th>
              <th><%= model_class.human_attribute_name(:sfjc) %></th>
            </tr>
          </thead>
          <tbody>
            <% @plants.each do |plant| %>
            <tr>
              <td><%= plant.zw %></td>
              <td><%= plant.sfjdx %></td>
              <td><%= plant.sfjhfzmx %></td>
              <td><%= plant.sfjc %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="tab-pane" id="fzzb">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th><%= model_class.human_attribute_name(:zw) %></th>
              <th><%= model_class.human_attribute_name(:ke) %></th>
              <th><%= model_class.human_attribute_name(:shu) %></th>
              <th><%= model_class.human_attribute_name(:bjzwzym) %></th>
              <th><%= model_class.human_attribute_name(:zysj) %></th>
              <th><%= model_class.human_attribute_name(:gss) %></th>
              <th><%= model_class.human_attribute_name(:yjlyqy) %></th>
              <th><%= model_class.human_attribute_name(:kdzg) %></th>
              <th><%= model_class.human_attribute_name(:zysq) %></th>
            </tr>
          </thead>
          <tbody>
            <% @plants.each do |plant| %>
            <tr>
              <td><%= plant.zw %></td>
              <td><%= plant.ke %></td>
              <td><%= plant.shu %></td>
              <td><%= plant.bjzwzym %></td>
              <td><%= plant.zysj %></td>
              <td><%= plant.gss %></td>
              <td><%= plant.yjlyqy %></td>
              <td><%= plant.kdzg %></td>
              <td><%= plant.zysq %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>      
  </div>
  <%= paginate @plants, :left => 1, :right => 1 %>
  <% end %>



